# Takes either the number 1 or 0 as input
# If it's 1 print 1 forever, else print 0 and exit
# Source: https://esolangs.org/wiki/Truth-machine

let value = input("Input either 1 or 0: ");
if value == "0" {
    print(0);
} else if value == "1" {
    loop (while 1) {
        print(1);
    }
} else {
    print("Invalid input!");
}
