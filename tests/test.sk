# Meta testing stuff
let testTotal = 0;
let testBad = 0;
func test(msg, val, goodVal) {
    let str = "";
    testTotal += 1;
    if val == goodVal {
        str = "works: ";
    } else {
        str = "FAIL: ";
        testBad += 1;
    }
    str += msg + ": ";
    print(str + goodVal + " == " + val);
}

func testSummary() {
    print("");
    print("SUMMARY: " + (testTotal-testBad) + " out of " + testTotal + " tests passed");
    if testBad == 0 {
        print("ALL TESTS PASSED!");
    }
}

