# Factoral
print("*** Factoral tests ***");
func factorial(n) {
    if n < 0 {
        # factorial(x) is undefined when x < 0
        return none;
    }
    if n < 2 {
        return 1;
    }
    return n * factorial(n - 1);
}
test("factorial(4)", factorial(4), 24);
test("factorial(0)", factorial(0), 1);
test("factorial(-17)", factorial(-17), none);

